# Font
font pango:NotoSansM Nerd Font Mono 8

exec_always xrandr --output HDMI-1 --mode 1920x1080 --rate 144

# Modifier key
set $mod Mod4

# Your preferred terminal emulator
set $term alacritty

# Window management
bindsym $mod+w kill
bindsym $mod+v split v
# bindsym $mod+c split h # i use mode+c already for reloading a config file
bindsym $mod+s layout stacking
# bindsym $mod+t layout tabbed # use this binding for launching telegram
bindsym $mod+Shift+t exec i3-msg layout tabbed

bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+k focus up
bindsym $mod+j focus down

bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+k move up
bindsym $mod+Shift+j move down
bindsym $mod+Shift+p focus parent
bindsym $mod+Shift+c focus child
# bindsym $mod+m mark
# bindsym $mod+Shift+m move to mark
bindsym $mod+p exec ~/.dotfiles/i3/move_to_parent.sh

# Screenshots (you may need to install a screenshot tool like scrot or maim)
bindsym $mod+F11 exec maim -s | xclip -selection clipboard -t image/png
bindsym $mod+F12 exec maim | xclip -selection clipboard -t image/png

# Application launching
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+b exec opera
bindsym $mod+b exec vivaldi
bindsym $mod+o exec dolphin
bindsym $mod+r exec --no-startup-id rofi -show drun
bindsym $mod+e exec emacs
bindsym $mod+t exec telegram-desktop

# Workspace management
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7

# Move to workspace
bindsym $mod+Shift+1 move container to workspace number 1; workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2; workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3; workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4; workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5; workspace number 5

# Config reload
bindsym $mod+c reload

# Exit i3
bindsym $mod+q exit

# # Custom keybindings (you'll need to create equivalent scripts for i3)
# bindsym Mod1+semicolon+1 exec ~/.dotfiles/i3/switch_tab.sh 1
# bindsym Mod1+semicolon+2 exec ~/.dotfiles/i3/switch_tab.sh 2
# bindsym Mod1+semicolon+3 exec ~/.dotfiles/i3/switch_tab.sh 3
# bindsym Mod1+semicolon+4 exec ~/.dotfiles/i3/switch_tab.sh 4
# bindsym Mod1+semicolon+5 exec ~/.dotfiles/i3/switch_tab.sh 5

# Volume control
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

exec_always ~/.dotfiles/i3/launch.sh